{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "backtest-run-request.v1alpha2.schema.json",
  "title": "BacktestRunRequestV1Alpha2",
  "type": "object",
  "required": ["date_from", "date_to", "ticker", "strategy", "risk", "validation"],
  "properties": {
    "date_from": { "type": "string", "format": "date-time" },
    "date_to": { "type": "string", "format": "date-time" },
    "ticker": { "type": "string" },
    "strategy": {
      "type": "object",
      "required": ["strategy_id", "params", "version"],
      "properties": {
        "strategy_id": { "type": "string" },
        "params": { "type": "array", "items": { "type": "object", "required": ["name", "value", "type"], "properties": { "name": { "type": "string" }, "value": {}, "type": { "type": "string" }, "min": { "type": "number" }, "max": { "type": "number" }, "options": { "type": "array", "items": { "type": "string" } } }, "additionalProperties": false } },
        "version": { "type": "string" }
      },
      "additionalProperties": false
    },
    "risk": {
      "type": "object",
      "required": ["position_size_pct", "stop_type"],
      "properties": {
        "position_size_pct": { "type": "number", "minimum": 0, "maximum": 100 },
        "stop_type": { "type": "string" },
        "stop_value": { "type": "number" },
        "take_profit": { "type": "number" },
        "daily_loss_cap": { "type": "number" }
      },
      "additionalProperties": false
    },
    "validation": {
      "type": "object",
      "required": ["bootstrap", "permutation", "walkforward", "montecarlo"],
      "properties": {
        "bootstrap": { "type": "boolean" },
        "permutation": { "type": "boolean" },
        "walkforward": { "type": "boolean" },
        "montecarlo": { "type": "boolean" },
        "sensitivity": { "type": "boolean" },
        "regime": { "type": "boolean" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
